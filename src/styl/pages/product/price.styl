[id*="produto-comprar"]
    margin: 0 
    bottom: 0
    max-width: 100%
    width: 100%
    height: 50px 
    

    a
        margin: 0

.produto-comprar
    a
        background-color: rgb(0, 173, 90);
        cursor: pointer
        color: #fff
        font-size: 0!important 
        font-weight: 600
        border-radius: 2px
        align-items: center
        justify-content: center
        text-transform: uppercase
        display: flex
        height: 50px
        width: 100%
        text-decoration: none
        transition: $transition

        &:after
            content: 'Quero comprar'
            cursor pointer
            text-shadow:  0 0
            font-size: 18px;
            letter-spacing: 1px;
            color: #ffffff;
            font-weight: 600;
            text-align: center
            display inline-block

         &:before
             content: ''
             background: url('data:image/png;base64,')no-repeat;
             display: inline-block
             width: 23px
             height: 24px
             margin-left 10px

        &:hover
            color: #fff
            text-decoration: none
            background: darken(#4AC87A, 20%)    

#cepCarrinho 
    .summary
        display none 

    .simule
        font-size: 0
        display: flex
        align-items: center
        margin: 0
        position relative
        padding-left 52px

