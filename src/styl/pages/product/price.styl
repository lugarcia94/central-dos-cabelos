        br  
            display: none


    #txtCalculaFreteProduto
        margin: 0 
        width 140px
        text-align: left
        height 40px
        border: 1px solid #E8E8E8
        border-radius: 1px
        margin-left 15px

        @media(max-width 992px)
            width 100%
            margin-bottom 10px

    #btnCalculaFreteProduto
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0
        width 48px
        height 40px 
        color: #ffffff
        background: #1c1d1d
        border: none
        cursor: pointer 
        height 40px
        font-size: 14px!important
        font-weight: 700!important
        padding 0 20px

        @media(max-width: 991px)
