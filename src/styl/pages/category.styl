.category
    &__header
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
            
        &-wrapper
            display: flex
            align-items: center
            justify-content: space-between
            flex-wrap: wrap
            padding: 35px 0 10px 0
    @media(max-width 1290px)
        max-width: 991px
        margin 0 auto
    &__breadcrumb
        >ol
            display: inline-block
            >li
                display: inline
                &:first-child
                    span[itemprop]
                        font-size: 0px
                        text-transform uppercase
                        color: #989898
                        font-weight 400
                        &:before
                            content: 'Home'
                            font-size: 10px
                span[itemprop]
                    font-size: 10px
                    color: #979797
                    font-weight: 800
                    line-height: 16px
                    text-transform uppercase

                .separador
                    &:before
                        content: ''
                        display inline-block
                        color: #979797
                        width: 10px
                        height 10px
                        background-image: url('data:image/svg+xml;base64,')
                        background-repeat no-repeat
                        background-position: center 
                        background-size: 8px

                &:last-child
                    span[itemprop]
                        font-weight: bold
    &__inforesult
        font-size: 13px
        color: #333333
        font-weight: 500
        line-height: 16px

    &__ordenation
        display flex
        justify-content: flex-end;

        .fbits-ordenar
            display: flex
            align-items: center
        .fbits-ordenar-por
            font-size: 14px;
            line-height: 30px;
            color: #333333;
            font-weight: 500;
            text-align: right;
            white-space: nowrap
        select 
            height 30px
            background-color: #ffffff
            border: 1px solid #F0F0F0
            border-radius: 0
            color: #333333
            font-size: 13px
            appearance none
            padding-left: 9px
            background-image url('data:image/svg+xml;base64,') !important
            background-size 10px
    &__pagination
        .fbits-paginacao > ul
            a
                display: inline-block
                width: 35px
                height 35px
                line-height: 35px
                text-align: center
                font-size: 16px
                color: #373535
                font-weight: 400
                background: white
                margin: 0
                border: 1px solid #d9d9d9;
            li
                display: inline
                &.sel a
                    color: #ffffff
                    background: #111111

    &__list
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
        &-wrapper
            display: flex
            align-items: flex-start
            justify-content: space-between

    &__filter
        max-width: 290px
        width: 100%
        margin-right 20px
        &-close
            display: none

        &-selected
            padding-top: 30px

        .fbits-filtro-pai
            margin: 0
            border none
            padding: 20px 0
            border: 1px solid #d9d9d9
            margin-bottom 30px
            padding-left 20px
            // &:first-child
            //     padding 0
        .fbits-filtro-titulo-pai
            font-size: 15px;
            color: $cor02
            line-height: 20px
            text-align: left
            text-transform: uppercase
            font-weight: 800
            display flex
            align-items: center
            justify-content: flex-start
            margin-bottom: 30px
            padding-bottom 20px
            position relative
            &:before
                content: ''
                height 1px
                background #cecece
                width: calc(100%+20px)
                position: absolute
                bottom: 0px
                left -20px

            &:after
                content: ''
                height 40px
                background $cor01
                width: 5px
                position: absolute
                top: -12px
                left -20px

        .fbits-filtro-quantidade
            color  $cor01


        .fbits-lista-filtro-filho
            display: block
            padding: 0
            .liCores
                position relative
            >li
                display flex
                align-items: center;
                font-size: 14px
                color: #333333
                font-weight: 500
                line-height 28px
                height auto
                line-height: 18px
                overflow hidden
                margin-bottom 5px
                
                input
                    appearance none
                    width: 15px
                    height 15px
                    border: 1px solid #D9D9D9
                    border-radius: 50%
                    margin 0
                    margin-right 5px
                    
                    &:checked
                        background: #ee3a53
                        box-shadow inset 0 0 0 4px white
                    
                label 
                    margin 0
                    font-size: 14px;
                    line-height: 30px;
                    color: #333333;
                    font-weight: 500;

            .fbits-filtro-ver-mais
                text-align: left
                font-size: 12px
                color: #373535
                font-weight: bold
        .fbits-filtro-filho-item
            display: block

        .fbits-componente-filtros-selecionados
            > ul
                padding-bottom: 30px
                border-bottom: 1px solid #E7E7E7
        .fbits-componente-filtros-selecionados-titulo
            font-size: 15px
            color: #353535
            font-weight: bold
            line-height: 19px
        .fbits-componente-filtro-selecionados-pai
            padding: 5px 0
            .tituloPai
                font-size: 13px
                color: #353535
                line-height: 16px
                text-transform: none
                &:after
                    display: none
            .fbits-componente-filtro-selecionados-remover
                display: none
        .fbits-componente-filtro-selecionados-filho.checked
            display: flex
            align-items: center
            justify-content: space-between
            >a
                order: 1
                display: block
                width: 25px
                height 25px
            span 
                font-size: 13px
                color: #353535
                line-height: 16px
                text-transform: none
            .qtde
                display: none
        span.fbits-filtro-limpar
            background: #353535
            border: 1px solid #373535
            border-radius: 1px
            font-family: Muli-Bold
            font-size: 15px
            color: #FFFFFF
            letter-spacing: -0.02px
            text-align: center
            width: 100%
            font-size: 0px
            height 40px
            line-height: 40px
            margin-top: 25px
            &:before
                content: 'LIMPAR FILTROS'
                font-size: 15px
                color: #ffffff

    &__footer
        &-container
            max-width: 1190px
            width: 100%
            margin: 0 auto
        &-wrapper
            display: flex
            align-items: center
            justify-content: center
            flex-wrap: wrap
            padding-top: 30px
            margin-top: 30px
    &__text
        padding-top: 40px
        flex: 1 1 100%
        font-size: 13px
        color: #373535
        line-height: 21px
        padding-bottom: 30px
    &__btn-mobile
        display: none
    &__content 
        margin-top: 120px;

//mobile
@media(max-width : 991px)
    .fbits-categoria
        padding-top: 100px
        .header__topbar
            display: none
    .category
        &__banner
            display: none
        &__products
            width: 100%
        &__filter
            position: fixed
            top: 0
            left 0
            transition: all .3s
            transform: translate3d(-100%, 0, 0)
            z-index: 99
            height: 100vh
            max-width: 100%
            background: rgba(0,0,0, 0.75)
            &-wrapper
                max-width: 250px
                padding: 0 15px
                width: 100%
                background: #fff
                height: 100vh
                overflow auto
            &-close
                display: block
                width: 45px
                height 45px
                position absolute
                top: 0px
                left 255px
                color #ee3a53
                font-size 18px
                line-height normal
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: bold;
        &__header
            &-wrapper
                padding-top: 25px
                > *
                    flex: 1 1 100%
                    text-align: left
                    margin: 5px 0
                .category__pagination
                    display: none
                .fbits-ordenar
                    justify-content: center
        &__btn-mobile
            display: flex
            align-items: center
            justify-content: center
            max-width 290px
            width: 100%
            height 40px
            margin: 0 auto
            background: #333333
            font-size: 14px
            color: #FFFFFF
            text-transform: uppercase
            font-weight: bold
            transition: all .3s
            margin-top: 15px
            cursor: pointer
            &:hover
                background: #ffffff
                color: #333333
                border: 1px solid #333333
        &__footer
            padding-bottom: 55px
            &-wrapper
                justify-content: center
                border: none
                width: 100%
            .category__inforesult, .category__text
                display: none
        &__content 
            margin-top: 0px;
            padding: 0 15px;
    .filter__open
        .category__filter
            transform: translate3d(0, 0, 0)
@media(max-width : 525px)
    .category__products
        .fbits-item-lista-spot
            flex: 1 1 49%

@media(max-width : 320px)
    .category__products
        .fbits-item-lista-spot
            flex: 1 1 100%


.categoria__name
    display block
    font-size: 20px
    color: $cor01
    line-height: 27px
    text-align: left 
    text-transform: uppercase
    font-weight: 800
    margin-bottom: 20px
    padding-bottom 0px
    border-bottom 1px solid #ccc
    position relative


    &-span
        display block
    
    .fbits-item-lista-spot.fbits-item-lista-spot-empty
        display none

.fbits-categoria
    .category__products 
        > span
            display: flex!important
            flex-wrap: wrap
            padding-top: 30px
            justify-content: space-between

        .fbits-item-lista-spot 
            width 33%
            min-height: 445px