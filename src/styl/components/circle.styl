.circle
    &__wrapper
        margin 30px 0
        a
            display: flex
            flex-wrap: wrap
            justify-content: center
            text-align center
            figure,
            h3,
            span
                flex: 1 1 100%
                text-align center
            figure  
                margin-bottom 20px
            h3
                font-size: 17px
                font-weight: 800
                color: $cor02
            span 
                font-size: 16px
                font-weight: 800
                color: $cor01
                text-decoration underline
                display flex
                justify-content: center
                align-items: center
                &:before
                    content: ''
                    display: block
                    background-image: url('data:image/svg+xml;base64,')
                    background-repeat: no-repeat
                    background-size: auto 
                    width: 12px 
                    height: 12px
                    margin-right 5px
            img 
                margin 0 auto